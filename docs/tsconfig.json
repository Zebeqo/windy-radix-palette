{
  "compilerOptions": {
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  }
}
