---
import { clsx } from 'clsx';

export type Props = Omit<astroHTML.JSX.AnchorHTMLAttributes, 'className'>;

const url = Astro.url;
const href = Astro.props.href;

const isActive = url.pathname == href;
---

<a
  {...Astro.props}
  class={clsx(
    'flex',
    'items-center',
    'text-mauve-12',
    'py-2',
    'px-4',
    'bg-transparent',
    'rounded-full',
    'select-none',
    'min-h-6',
    'text-sm',
    'transition-colors',
    'hover:bg-violet-5',
    'focus:ring-2',
    'focus:ring-violet-7',
    {
      'bg-violet-5': isActive,
    }
  )}
>
  <slot />
</a>
